<section class="mt-4">
  <h1>Log In</h1>
  <%= simple_form_for(:session, url: login_path) do |f|%>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.label :remember_me %>
    <%= f.input_field :remember_me, as: :boolean%>
    <br>
    <%= f.button :submit, "Log In", class: "btn-primary" %>
  <% end%>
</section>