<h1>Invite People to <%=@event.title%></h1>

<% if @users.any? %>
  <ul id="for-invitation" class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <%= user.name %>
        <%= render partial: "invitations/form", locals: {event: @event, user: user, creator: @creator} %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= current_user == @creator %>